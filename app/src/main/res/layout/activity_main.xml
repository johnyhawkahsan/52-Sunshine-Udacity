<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            popupTheme="@style/AppTheme.PopupOverlay"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/today_touch_selector" />

    </android.support.design.widget.AppBarLayout>

    <fragment
        android:layout_marginTop="50dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/fragment_forecast"
        android:name="com.johnyhawkdesigns.a52_sunshine_udacity.ForecastFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.johnyhawkdesigns.a52_sunshine_udacity.ForecastFragment"
        tools:layout="@android:layout/list_content">
        <!--fragment_forecast is the same as activity_main(sw600dp).xml-->

    </fragment>

</FrameLayout>
